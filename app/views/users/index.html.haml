%table.table.table-striped.table-hover
  %thead.thead-dark
    %tr
      %th{ scope: 'col'}
        Id
      %th{ scope: 'col'}
        Email
      %th{ scope: 'col'}
        Role
      %th{ scope: 'col'}
        Created at
      %th{ scope: 'col'}
        Updated at
      %th{ scope: 'col'}
        Action
  %tbody
    -@users.each do |user|
      %tr
        %th
          =user.id
        %td
          =user.email
        %td
          =user.role
        %td
          =user.created_at
        %td
          =user.updated_at
        %td
          =link_to 'Edit', edit_user_path(user.id)
