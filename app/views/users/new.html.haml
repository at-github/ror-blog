%h2 Inscription

=form_with model: @user, data: {turbo: false} do |form|

  =render 'users/form', user: @user, form: form

  %div.form-group
    =form.label :'Confirmez le mot de passe'
    =form.password_field :password_confirmation, { |
      :class => "form-control #{@user.errors.full_messages_for(:password_confirmation).empty? ? '' : 'is-invalid'}" |
    } |

    - @user.errors.full_messages_for(:password_confirmation).each do |message|
      %div.error-message= message

  =form.submit 'Inscription', class: 'btn btn-success'
