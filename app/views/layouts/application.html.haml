!!! 5
%html
  %head
    %title Citoyen en transition avec Ruby On Rails
    %meta{:name => "viewport", :content => "width=device-width,initial-scale=1"}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application"
    = javascript_importmap_tags
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      =link_to 'Citoyen en transition avec Ruby On Rails', root_path, class: 'navbar-brand'
      %button.navbar-toggler
        %span.navbar-toggler-icon
      %div.collapse.navbar-collapse
        %ul.navbar-nav.mr-auto
          -if current_user
            %li.nav-item
              =link_to 'DÃ©connexion', sign_out_path, data: {turbo_method: :delete}, class: 'nav-link active'
          -else
            %li.nav-item
              =link_to 'Connexion', sign_in_path, class: 'nav-link active'
            %li.nav-item
              =link_to 'Inscription', new_user_path, class: 'nav-link active'
        -if current_user
          %span.navbar-text
            =current_user.email

    -flash.each do |key, value|
      %div{:class => "alert alert-#{key}"}
        =value

    %div.container
      = yield
